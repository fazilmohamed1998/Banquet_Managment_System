            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>lk.elevenzcode.bms</groupId>
            <artifactId>entity-remote</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>lk.elevenzcode.bms</groupId>
            <artifactId>user</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>lk.elevenzcode.bms</groupId>
            <artifactId>customer</artifactId>
            <version>1.0-SNAPSHOT</version>
