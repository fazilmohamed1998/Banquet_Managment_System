            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>lk.elevenzcode.bms</groupId>
            <artifactId>banquet-hall</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>lk.elevenzcode.bms</groupId>
            <artifactId>food</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>lk.elevenzcode.bms</groupId>
